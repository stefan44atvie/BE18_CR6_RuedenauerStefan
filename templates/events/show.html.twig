{% extends 'base.html.twig' %}

{% block title %}Events{% endblock %}

{% block body %}
    <h1>Events</h1>

    <table class="table">
        <tbody>
           
            <tr>
                <th>Event's name</th>
                <td>{{ event.eventName }}</td>
            </tr>
            <tr>
                <th>Event date</th>
                <td>{{ event.eventDatetime ? event.eventDatetime|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ event.eventDescription }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td><img src="{{ event.eventImage }}" alt="Girl in a jacket" width="300" height="300"></td>
            </tr>
            <tr>
                <th>max Capacity</th>
                <td>{{ event.eventCapacity }}</td>
            </tr>
            <tr>
                <th>email</th>
                <td>{{ event.eventEmail }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ event.eventPhone }}</td>
            </tr>
            <tr>
                <th>address</th>
                <td>{{ event.eventAddress }}</td>
            </tr>
            <tr>
                <th>Homepage</th>
                <td>{{ event.eventUrl }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ event.eventType }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_events_index') }}">back to list</a>

    <a href="{{ path('app_events_edit', {'id': event.id}) }}">edit</a>

    {{ include('events/_delete_form.html.twig') }}
{% endblock %}
